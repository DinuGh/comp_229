<%- include ('../partials/navigation') %>

    <!-- Content for the Add_Edit page -->
    <div class="w3-padding-64" style="height:100vh; width:100%">
        <div class="w3-half w3-khaki w3-container" style="height:100%; width:100%">
            <div class="w3-center">
            <div class="offset-md-3 col-md-3">
                <h1><%= title %></h1>
                        <form class="form" method="POST">
                                <div class="form-group">
                                <div class="container w3-row w3-padding-32">

                                <div style="width:50px;"><i class="w3-xxlarge fa fa-user"></i></div>
                                    <input class="w3-input w3-border" name="contactName" type="text"
                                    class="form-control" placeholder="Name" required>
                              
                                <div style="width:50px"><i class="w3-xxlarge fa fa-envelope"></i></div>
                                    <input class="w3-input w3-border" name="email" type="text" 
                                    class="form-control" placeholder="Email" required>
                              
                                <div style="width:50px"><i class="w3-xxlarge fa fa-phone"></i></div>
                                    <input class="w3-input w3-border" name="phone" type="number" 
                                    class="form-control" placeholder="Phone" required>

                                    <button class="w3-button w3-block w3-section w3-ripple w3-padding"
                                     type="submit" 
                                     style="background-color: rgb(13, 82, 135); color: rgb(245, 245, 245);">
                                     Send</button>

                                    <button  class="w3-button w3-block w3-section w3-ripple w3-padding"
                                    onclick="location.href='/contacts/list'"
                                    style="background-color: rgb(163, 8, 11); color: rgb(245, 245, 245);">
                                    Cancel</button>
                         </form>
                         </div>
                    </div>
                </div>
            </div>
        </div>
 <%- include ('../partials/footer') %>